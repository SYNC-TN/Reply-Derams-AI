
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String?
  createdAt DateTime @default(now())
  provider  String?
}

model Page {
  id           Int        @id @default(autoincrement())
  nb           Int
  text         String
  image        String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  dreamStory   DreamStory @relation(fields: [dreamStoryId], references: [id])
  dreamStoryId Int
}

model Option {
  id              Int            @id @default(autoincrement())
  artStyle        String
  language        String
  advancedOption  AdvancedOption?
  dreamStory      DreamStory     @relation(fields: [dreamStoryId], references: [id])
  dreamStoryId    Int
}

model AdvancedOption {
  id            Int     @id @default(autoincrement())
  theme         String
  styleStrength String
  resolution    String
  option        Option  @relation(fields: [optionId], references: [id])
  optionId      Int     @unique
}

model DreamStory {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  title       String
  options     Option[]
  pages       Page[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}